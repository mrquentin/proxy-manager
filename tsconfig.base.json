{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "paths": {
      "@proxy-manager/shared": ["./packages/shared/src/index.ts"],
      "@proxy-manager/shared/*": ["./packages/shared/src/*"],
      "@proxy-manager/db": ["./packages/db/src/index.ts"],
      "@proxy-manager/db/*": ["./packages/db/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
